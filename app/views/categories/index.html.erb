<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 text-center">Better Than Yesterday</h1>
    <p class="lead text-center">Keep moving forward</p>
  </div>
</div>

<div class="col-md-2">
  <%= link_to 'カテゴリ新規追加', new_category_path, {class: 'btn btn-primary btn-block margin-bottom'} %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <table class="table">
        <thead>
        <tr>
          <th>カテゴリ名</th>
          <th style="width: 120px;"></th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, edit_category_path(category) %></td>
            <td><%= link_to "削除", category_path(category), {method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-xs"} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>