<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 text-center">Better Than Yesterday</h1>
    <p class="lead text-center">Keep moving forward</p>
  </div>
</div>

<div class="col-md-2">
  <%= link_to 'タグ新規追加', new_tag_path, {class: 'btn btn-primary btn-block margin-bottom'} %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <table class="table">
        <thead>
        <tr>
          <th>タグ名</th>
          <th style="width: 120px;"></th>
        </tr>
        </thead>
        <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= link_to tag.tag_name, edit_tag_path(tag) %></td>
            <td><%= link_to "削除", tag_path(tag), {method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-xs"} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
