<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="text-center">記事投稿</h1>
  </div>
</div>

<%= form_with model: @post, local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, {class: "form-control", placeholder: ""} %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, {class: "form-control", placeholder: "",rows: 10} %>
      </div>

      <div>
        <%= f.button "新規作成", {class: "btn btn-primary"} %>
      </div>

    </div>
  </div>
</div>
<% end %>










