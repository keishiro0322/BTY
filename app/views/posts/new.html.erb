
<div class="container">
  <h1 class="text-center">記事新規作成</h1>
</div>


<%= form_with model: @post, local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <div class="form-group">
        <%= f.label :title, "記事タイトル" %>
        <%= f.text_field :title, {class: "form-control", placeholder: ""} %>
      </div>

      <div class="form-group">
        <%= f.label :content, "記事コンテンツ" %>
        <%= f.text_area :content, {class: "form-control", placeholder: "",rows: 10} %>
      </div>

      <div class="form-group">
        <%= f.label :category, "カテゴリー" %><br/>
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
          <%= category.label do %>
            <%= category.check_box %>
            <%= category.text %>
          <% end %>
        <% end %>
      </div>

      <div>
        <%= f.button "新規作成", {class: "btn btn-primary"} %>
      </div>

    </div>
  </div>
</div>
<% end %>








