<h1>記事新規作成</h1>

<%= form_with model: @post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>


  <%= f.fields_for :comments do |comment| %>
    <%= comment.label :name %>
    <%= comment.text_field :name %>
    <%= comment.label :content %>
    <%= comment.text_field :content %>
  <% end %>


  <%= f.button "新規作成" %>
<% end %>