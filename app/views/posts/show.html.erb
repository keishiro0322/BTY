
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="text-center"><%= @post.title %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h3 class="post-content">
        <%= @post.content %>
      </h3>
      <p class="post-meta"><%= @post.created_at %></p>
      <hr>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @post.comments.each do |comment| %>
        <h3 class="comment-name">
          <%= comment.name %>
        </h3>
        <h3 class="comment-content">
          <%= comment.content %>
        </h3>
        <p class="post-meta"><%= comment.created_at %></p>
        <hr>
      <% end %>
    </div>
  </div>
</div>



<%= form_with(model: [@post, @comment], local: true) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h3 class="comment-name">
            <%= f.text_field :name %>
          </h3>
          <h3 class="comment-content">
            <%= f.text_area :content %>
          </h3>
          <%= f.submit "コメント投稿" %>
          <hr>
        </div>
      </div>
    </div>
<% end %>